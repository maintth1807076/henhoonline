@model PagedList.IPagedList<HenhoOnline.Models.ApplicationUser>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    var totalPage = (int)ViewBag.TotalPage;
    var limit = (int)ViewBag.Limit;
    var currentPage = (int)ViewBag.CurrentPage;
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Avatar
        </th>
        <th>
            UserName
        </th>
        <th>
            @Html.ActionLink("Full Name", "Index", "ManagerUser", new { sortOrder = ViewBag.NameSortParameter }, null)
        </th>
        <th>
            Gender
        </th>
        <th>
            BirthDay
        </th>
        <th>
            HoroscopeId
        </th>

        <th>
            Email
        </th>
        <th>
            Address
        </th>

        <th>
            @Html.ActionLink("Created At", "Index", "ManagerUser", new { sortOrder = ViewBag.DateSortParameter }, null)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.Avatar" alt="@item.UserName" class="img-thumbnail" style="width: 100px; height:auto" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoroscopeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete ", "Delete",
                          new { id = item.FullName },
                          new { @class = "btn btn-danger btn-delete-user", @id = "delete-" + item.FullName })
            </td>
        </tr>
    }

</table>

</h>

<div>
    <strong>Page @currentPage of @totalPage</strong>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li>
                <a href="?page=@(currentPage-1)&limit=@limit" aria-label="First">
                    <span aria-hidden="true">First</span>
                </a>
            </li>
            <li>
                <a href="?page=@(currentPage-1)&limit=@limit" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
            </li>
        }
        @if (currentPage > 2)
        {
            <li><a href="?page=@(currentPage-2)&limit=@limit">@(currentPage - 2)</a></li>
        }
        @if (currentPage > 1)
        {
            <li><a href="?page=@(currentPage-1)&limit=@limit">@(currentPage - 1)</a></li>
        }
        <li class="active"><a href="#">@currentPage</a></li>
        @if (totalPage - currentPage >= 1)
        {
            <li><a href="?page=@(currentPage+1)&limit=@limit">@(currentPage + 1)</a></li>
        }
        @if (totalPage - currentPage >= 2)
        {
            <li><a href="?page=@(currentPage+2)&limit=@limit">@(currentPage + 2)</a></li>
        }
        @if (currentPage < totalPage)
        {
            <li>
                <a href="?page=@(currentPage + 1)&limit=@limit" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
            <li>
                <a href="?page=@(currentPage + 1)&limit=@limit" aria-label="Last">
                    <span aria-hidden="true">Last</span>
                </a>
            </li>
        }
    </ul>
</nav>

@Html.AntiForgeryToken()
@section scripts
{
    <script>
        $(document).ready(function () {
            $('.btn-delete-user').click(function () {
                var id = $(this).attr("id").replace("delete-", "");
                if (confirm("Are you sure want to delete this user ?")) {
                    var token = $('input[name="__RequestVerificationToken"]').val();;
                    $.ajax({
                        url: "/ManagerUser/Delete/" + id,
                        type: "POST",
                        data: {
                            __RequestVerificationToken: token
                        },
                        success: function (data) {
                            alert("Delete success!");
                            window.location.reload();
                        },
                        error: function (error) {
                            alert("Action fails! Please try again!");
                        }
                    });
                }
                return false;
            });
        });
    </script>